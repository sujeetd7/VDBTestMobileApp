{
 "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es6"], // Add "dom" here
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "jsx": "react",              // Enable JSX syntax for React
    "resolveJsonModule": true 
  },
  "include": ["src"]
}
